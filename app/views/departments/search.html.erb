<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<%= form_tag 'department-show', method: :get do %>

  <div class="container">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Tickets Generated</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <td><%= Ticket.where(:department_id => department.id).count() %></td>
          <td><%= link_to "Destroy", {action: :destroy, id: department.id}, method: :delete %></td>
        </tr>
      <% end %>
      </tbody>
    </table>


