<h2>Listing Tickets</h2>
<ul class="nav nav-tabs">
  <li class="text-right" role="presentation"><a href="/login">Logout</a></li>
</ul>

<% @user = User.find(current_user.id)
   @path = '/welcome'
   if @user.admin
     @path = '/admin-welcome'
   end
%>

<%= form_tag @path, method: :get do %>

  <div class="container">
    <table class="table">
      <thead>
      <tr>
        <th>UserName</th>
        <th>Tickets Generated</th>
        <th>Departments</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <% if user.admin != true%>
            <th><%= user.username %></th>
            <td><%= Ticket.users_ticket(user.id).count %></td>
            <% @tickets = Ticket.users_ticket(user.id).select(:department_id).distinct
               @departments = ""
               @tickets.each { |ticket|
                 @departments = @departments + Department.find_by("id = ?", ticket.department_id).name + ", "
               }
               puts @departments
            %>

            <td> <%= @departments %> </td>

            <td><%= link_to "Show Details", {action: :show, id: user.id}%></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>


    <!--    <label>-->
    <!--      <input type="checkbox" checked="checked" name="remember"> Remember me-->
    <!--    </label>-->
  </div>
  <div class="text-center">
    <button type="submit">Back</button>
  </div>

