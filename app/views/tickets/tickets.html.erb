<h2>Listing Tickets</h2>
<ul class="nav nav-tabs">
  <li class="text-right" role="presentation"><a href="/login">Logout</a></li>
</ul>

<% @user = User.find(current_user.id)
   @path = '/welcome'
   if @user.admin
     @path = '/admin-welcome'
   end
%>

<%= form_tag @path, method: :get do %>

  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <% if @path == '/admin-welcome' %>
          <th>UserName</th>
          <% end %>
          <th>Subject</th>
          <th>Body</th>
          <th>Department</th>
          <th>Status</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @tickets.each do |ticket| %>
            <tr>
              <% if @path == '/admin-welcome' && ticket.status == false%>
                <th><%= User.find(ticket.user_id).username %></th>
                <td><%= ticket.subject %></td>
                <td><%= ticket.body %></td>
                <td><%= Department.find(ticket.department_id).name %></td>
                <td>Pending</td>
                <td><%= link_to "Resolve", {action: :resolve, id: ticket.id}%></td>
              <% else if @path == '/welcome' %>
                  <td><%= ticket.subject %></td>
                  <td><%= ticket.body %></td>
                  <td><%= Department.find(ticket.department_id).name %></td>
                  <% if ticket.status == true %>
                    <td>Resolved</td>
                  <% else %>
                    <td>Pending</td>
                  <% end %>
                  <td><%= link_to "Destroy", {action: :destroy, id: ticket.id}, method: :delete %></td>
                <% end %>
                <% end %>
            </tr>
        <% end %>
      </tbody>
    </table>


    <!--    <label>-->
    <!--      <input type="checkbox" checked="checked" name="remember"> Remember me-->
    <!--    </label>-->
  </div>
  <div class="text-center">
    <button type="submit">Back</button>
  </div>

